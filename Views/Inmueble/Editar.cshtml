@model Inmobiliaria_2022.Models.Inmueble

@{
    ViewData["Title"] = "Editar datos de inmueble";
    var propietario = (List<Propietario>)ViewBag.propietario;
    var inmueble = (Inmueble)ViewBag.inmueble;
    var tipos = new List<String>(){"Local","Deposito","Casa","Departamento"};
    var usos = new List<String>(){"Residencial","Comercial"};
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPropietario" class="control-label"></label>
                <select class="form-control" name="IdPropietario">
                    @foreach (var item in propietario)
                    {
                        if(item.IdPropietario == Model.due√±o.IdPropietario)
                        {
                            @:<option selected value="@item.IdPropietario">@(item.Nombre+" "+item.Apellido)</option>
                        }
                        else
                        {
                            @:<option value="@item.IdPropietario">@(item.Nombre+" "+item.Apellido)</option>
                        }
                        
                    }
                </select>
                <span asp-validation-for="IdPropietario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uso" class="control-label"></label>
                <select class="form-control" name="Uso">
                    @foreach (var item in usos)
                    {
                        if(item.Equals(Model.Uso))
                        {
                            @:<option selected value="@item">@item</option>
                        }
                        else
                        {
                         @:<option value="@item">@item</option>
                        }
                    }
                </select>
                <span asp-validation-for="Uso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select class="form-control" name="Tipo">
                    @foreach (var item in tipos)
                    {
                        if(item.Equals(Model.Tipo))
                        {
                            @:<option selected value="@item">@item</option>
                        }
                        else
                        {
                         @:<option value="@item">@item</option>
                        }
                        
                    }
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ambientes" class="control-label"></label>
                <input asp-for="Ambientes" class="form-control" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitud" class="control-label"></label>
                <input asp-for="Longitud" class="form-control" />
                <span asp-validation-for="Longitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitud" class="control-label"></label>
                <input asp-for="Latitud" class="form-control" />
                <span asp-validation-for="Latitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select class="form-control" name="Estado">
                    @if(Model.Estado == true)
                    {
                        <option selected value="true">Disponible</option>
                        <option value="false">No Disponible</option>
                    }
                    else
                    {
                        <option selected value="false">No Disponible</option>
                        <option  value="true">Disponible</option>
                    }
                    
                    
                    
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" /> |
                    <a class="btn btn-success" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
